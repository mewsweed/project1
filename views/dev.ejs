<!DOCTYPE html>
<html lang="en">
<head>
          <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
          <title>Document</title>
</head>
<body>
          <h2>Developer Tools: Truncate Tables</h2>
          <button onclick="truncateTable('users')">Truncate Users Table</button>
          <button onclick="truncateTable('orders')">Truncate Orders Table</button>
          <button onclick="truncateTable('products')">Truncate Products Table</button>

          <script>
          function truncateTable(tableName) {
                    if (confirm(`Are you sure you want to truncate the "${tableName}" table?`)) {
                              fetch(`/dev/truncate/${tableName}`, {
                                        method: 'POST'
                              })
                              .then(response => response.json())
                              .then(data => {
                                        alert(data.message || 'Table truncated successfully.');
                              })
                              .catch(err => {
                                        alert('Error truncating table.');
                              });
                    }
          }
          </script>
</body>
</html>